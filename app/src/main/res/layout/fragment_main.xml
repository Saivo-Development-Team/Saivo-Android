<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:mapbox="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.main.MainFragment"
        android:background="@drawable/background"
        android:orientation="vertical">


    <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/MainViewCoordinatorLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toTopOf="@+id/MainBottomNavigation"
            android:layout_above="@id/MainBottomNavigation"
            android:layout_marginTop="0dp"
            android:layout_alignParentTop="true" android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true">

        <com.mapbox.mapboxsdk.maps.MapView
                android:id="@+id/MainMapView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                mapbox:mapbox_cameraTargetLat="40.73581"
                mapbox:mapbox_cameraTargetLng="-73.99155"
                mapbox:mapbox_cameraZoom="11"
                android:layout_alignStart="@+id/MainViewCoordinatorLayout"
                android:elevation="0dp"
        />

        <androidx.core.widget.NestedScrollView
                android:background="@drawable/background"
                android:layout_width="match_parent"
                android:layout_height="380dp"
                android:fillViewport="true"
                app:behavior_peekHeight="120dp"
                app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
                android:elevation="15dp">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
            app:menu="@menu/bottom_nav_menu"
            android:elevation="20dp"
            android:id="@+id/MainBottomNavigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lightGreen"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true">
    </com.google.android.material.bottomnavigation.BottomNavigationView>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".ui.auth.LoginFragment"
                                                   android:id="@+id/login_frameLayout">
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/login_username_editText"
            android:autofillHints="Username" tools:ignore="LabelFor" tools:targetApi="o"
            android:drawableEnd="@drawable/ic_email_black" android:hint="@string/hint_username"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="120dp" app:layout_constraintEnd_toStartOf="@+id/guideline2"
            app:layout_constraintStart_toStartOf="@+id/guideline" app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/login_password_editText"
            android:autofillHints="Password"
            tools:ignore="LabelFor"
            tools:targetApi="o"
            android:drawableEnd="@drawable/ic_lock_black" android:hint="@string/hint_password"
            app:layout_constraintTop_toBottomOf="@+id/login_username_editText"
            android:layout_marginTop="20dp" app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintEnd_toStartOf="@+id/guideline2" app:layout_constraintBottom_toTopOf="@+id/guideline3"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.055"/>
    <Button
            android:text="@string/register_btnText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/login_register_button"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/login_password_editText"
            app:layout_constraintBottom_toTopOf="@+id/guideline3"
            app:layout_constraintEnd_toStartOf="@+id/login_login_button"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="80dp"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintHorizontal_bias="1.0"/>
    <Button
            android:text="@string/login_login_btnText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/login_login_button"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/login_password_editText"
            app:layout_constraintBottom_toTopOf="@+id/guideline3"
            app:layout_constraintStart_toEndOf="@+id/login_register_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.0" android:layout_marginEnd="80dp"/>
    <Button
            android:text="@string/login_forgot_btnText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/login_reset_password_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintEnd_toStartOf="@+id/guideline2"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toTopOf="@+id/guideline3"
            tools:visibility="visible"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline" app:layout_constraintGuide_begin="80dp"
                                                android:orientation="vertical"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline2"
                                                android:orientation="vertical" app:layout_constraintGuide_end="80dp"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline3" app:layout_constraintGuide_begin="350dp"
                                                android:orientation="horizontal"/>
</androidx.constraintlayout.widget.ConstraintLayout>
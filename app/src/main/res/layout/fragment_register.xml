<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".view.fragment.auth.RegisterFragment"
    >

        <EditText
                android:id="@+id/register_firstname_editText"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:autofillHints="false"
                android:background="@drawable/edit_text_background"
                android:ems="10"
                android:hint="@string/firstname"
                android:inputType="textPersonName"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColorHint="@color/transparentGray"
                app:layout_constraintBottom_toTopOf="@+id/register_lastname_editText"
                app:layout_constraintLeft_toLeftOf="@+id/GuidelineLeft"
                app:layout_constraintRight_toRightOf="@+id/GuidelineRight"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                tools:targetApi="o" />

        <EditText
                android:id="@+id/register_lastname_editText"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:autofillHints="false"
                android:background="@drawable/edit_text_background"
                android:ems="10"
                android:hint="@string/lastname"
                android:inputType="textPersonName"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColorHint="@color/transparentGray"
                app:layout_constraintBottom_toTopOf="@+id/register_email_editText"
                app:layout_constraintLeft_toLeftOf="@+id/GuidelineLeft"
                app:layout_constraintRight_toRightOf="@+id/GuidelineRight"
                app:layout_constraintTop_toBottomOf="@+id/register_firstname_editText"
                tools:targetApi="o" />

        <EditText
                android:id="@+id/register_email_editText"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:autofillHints="false"
                android:background="@drawable/edit_text_background"
                android:drawableEnd="@drawable/ic_email"
                android:ems="10"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColorHint="@color/transparentGray"
                app:layout_constraintBottom_toTopOf="@+id/register_password_editText"
                app:layout_constraintLeft_toLeftOf="@+id/GuidelineLeft"
                app:layout_constraintRight_toRightOf="@+id/GuidelineRight"
                app:layout_constraintTop_toBottomOf="@+id/register_lastname_editText"
                tools:targetApi="o" />

        <EditText
                android:id="@+id/register_password_editText"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/edit_text_background"
                android:drawableEnd="@drawable/ic_lock"
                android:ems="10"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColorHint="@color/transparentGray"
                app:layout_constraintBottom_toTopOf="@+id/register_register_button"
                app:layout_constraintLeft_toLeftOf="@+id/GuidelineLeft"
                app:layout_constraintRight_toRightOf="@+id/GuidelineRight"
                app:layout_constraintTop_toBottomOf="@+id/register_email_editText"
                tools:ignore="Autofill" />

        <Button
                android:id="@+id/register_register_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/button_background"
                android:enabled="false"
                android:overScrollMode="always"
                android:text="@string/register"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@+id/GuidelineLeft"
                app:layout_constraintRight_toRightOf="@+id/GuidelineRight"
                app:layout_constraintTop_toBottomOf="@+id/register_password_editText" />
        <androidx.constraintlayout.widget.Guideline
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintGuide_begin="50dp"
                android:id="@+id/GuidelineLeft"
        />
        <androidx.constraintlayout.widget.Guideline
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/GuidelineRight"
                app:layout_constraintGuide_end="50dp"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

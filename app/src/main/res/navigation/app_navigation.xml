<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/app_navigation"
        app:startDestination="@+id/splash">

    <fragment
            android:id="@+id/splash"
            android:name="com.saivo.recommendo.view.main.SplashFragment"
            android:label="fragment_splash"
            tools:layout="@layout/fragment_splash">
        <action
                android:id="@+id/to_login_action"
                app:destination="@id/login" />
    </fragment>
    <fragment
            android:id="@+id/login"
            android:name="com.saivo.recommendo.view.auth.LoginFragment"
            android:label="fragment_login"
            tools:layout="@layout/fragment_login">
        <action
                android:id="@+id/login_to_register_action"
                app:destination="@id/register" />
        <action
                android:id="@+id/login_to_main_ui_action"
                app:destination="@id/main_view" />
        <action
                android:id="@+id/login_to_reset_password_action"
                app:destination="@id/reset_password" />
    </fragment>
    <fragment
            android:id="@+id/register"
            android:name="com.saivo.recommendo.view.auth.RegisterFragment"
            android:label="fragment_register"
            tools:layout="@layout/fragment_register">
        <action
                android:id="@+id/register_to_main_ui_action"
                app:destination="@id/main_view" />
    </fragment>
    <fragment
            android:id="@+id/main_view"
            android:name="com.saivo.recommendo.view.main.MainFragment"
            android:label="fragment_main"
            tools:layout="@layout/fragment_main" >
        <action
                android:id="@+id/action_main_view_fragment_to_dashboard"
                app:destination="@id/dashboard"
                app:popUpTo="@+id/main_view" />
        <action
                android:id="@+id/action_main_view_fragment_to_notifications"
                app:destination="@id/notifications"
                app:popUpTo="@+id/main_view" />
    </fragment>
    <fragment
            android:id="@+id/reset_password"
            android:name="com.saivo.recommendo.view.auth.ResetPasswordFragment"
            android:label="fragment_reset_password"
            tools:layout="@layout/fragment_reset_password">
        <action
                android:id="@+id/reset_password_to_login_action"
                app:destination="@id/login"
                app:popUpTo="@id/login" />
    </fragment>
    <fragment
            android:id="@+id/dashboard"
            android:name="com.saivo.recommendo.view.main.page.DashboardFragment"
            android:label="fragment_dashboard"
            tools:layout="@layout/fragment_dashboard" >
        <action
                android:id="@+id/action_dashboard_to_settings2"
                app:destination="@id/settings"
                app:popUpTo="@+id/dashboard" />
    </fragment>
    <fragment
            android:id="@+id/settings"
            android:name="com.saivo.recommendo.view.main.page.SettingsFragment"
            android:label="fragment_settings"
            tools:layout="@layout/fragment_settings" >
        <action
                android:id="@+id/action_settings_to_preferences2"
                app:destination="@id/preferences"
                app:popUpTo="@+id/main_view" />
    </fragment>
    <fragment
            android:id="@+id/preferences"
            android:name="com.saivo.recommendo.view.main.page.PreferencesFragment"
            android:label="fragment_preferences"
            tools:layout="@layout/fragment_preferences" />
    <fragment
            android:id="@+id/notifications"
            android:name="com.saivo.recommendo.view.main.page.NotificationsFragment"
            android:label="fragment_notifications"
            tools:layout="@layout/fragment_notifications" />
</navigation>
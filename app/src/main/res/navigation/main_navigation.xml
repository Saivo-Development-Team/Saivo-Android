<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/main_navigation"
            app:startDestination="@+id/splashFragment">

    <fragment android:id="@+id/splashFragment"
              android:name="com.saivo.saivo_recommendo.ui.SplashFragment"
              android:label="fragment_splash"
              tools:layout="@layout/fragment_splash">
        <action android:id="@+id/nextAction" app:destination="@id/loginFragment"/>
    </fragment>
    <fragment android:id="@+id/loginFragment"
              android:name="com.saivo.saivo_recommendo.ui.auth.LoginFragment"
              android:label="fragment_login"
              tools:layout="@layout/fragment_login">
        <action android:id="@+id/toRegister" app:destination="@id/registerFragment"/>
        <action android:id="@+id/toMainUI" app:destination="@id/mainFragment"/>
    </fragment>
    <fragment android:id="@+id/registerFragment"
              android:name="com.saivo.saivo_recommendo.ui.auth.RegisterFragment"
              android:label="fragment_register"
              tools:layout="@layout/fragment_register">
        <action android:id="@+id/nextAction" app:destination="@id/mainFragment"/>
    </fragment>
    <fragment android:id="@+id/mainFragment"
              android:name="com.saivo.saivo_recommendo.ui.MainUIFragment"
              android:label="fragment_main"
              tools:layout="@layout/fragment_main"/>
</navigation>